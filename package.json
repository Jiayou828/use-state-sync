{
  "name": "use-state-sync",
  "version": "1.0.0",
  "private": true,
  "description": "use-state-sync workspace",
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev": "pnpm --filter ./apps/* dev",
    "build": "pnpm --filter ./packages/core build",
    "build:debug": "pnpm --filter ./packages/core build --watch",
    "preview": "pnpm --filter ./apps/* preview",
    "test": "pnpm --filter ./apps/* test",
    "test:ui": "pnpm --filter ./apps/* test:ui",
    "test:coverage": "pnpm --filter ./apps/* test:coverage"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "typescript": "^5.5.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}

